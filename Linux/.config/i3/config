# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Precise Resizing
    bindsym Right resize grow   width  5px
    bindsym Left  resize shrink width  5px
    bindsym Down  resize grow   height 5px
    bindsym Up    resize shrink height 5px
 
    # Fast Resizing 
    bindsym Shift+Right resize grow   width  40px
    bindsym Shift+Left  resize shrink width  40px
    bindsym Shift+Down  resize grow   height 40px
    bindsym Shift+Up    resize shrink height 40px


    # Resize to a Specific Dimension
    bindsym $ctrl+1 resize set 720px  480px
    bindsym $ctrl+2 resize set 800px  600px
    bindsym $ctrl+3 resize set 1060px 800px


    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# Resize i3-gaps
mode "i3-gap-resize" {
    # Inner Gap Change
    bindsym plus            gaps inner current  plus     5
    bindsym minus           gaps inner current  minus    5
    
    # Outer Gap Change
    bindsym Shift+plus      gaps outer current  plus     5
    bindsym Shift+minus     gaps outer current  minus    5

    # Precise Gap Changes
    bindsym Up              gaps top    current  minus   5
    bindsym Shift+Up        gaps top    current  plus    5
    bindsym Down            gaps bottom current  minus   5
    bindsym Shift+Down      gaps bottom current  plus    5
    bindsym Left            gaps left   current  minus   5
    bindsym Shift+Left      gaps left   current  plus    5
    bindsym Right           gaps right  current  minus   5
    bindsym Shift+Right     gaps right  current  plus    5

    # Combined Gap Changes
    bindsym $ctrl+Up        gaps vertical   current plus   5
    bindsym $ctrl+Down      gaps vertical   current minus  5
    bindsym $ctrl+Left      gaps horizontal current plus   5
    bindsym $ctrl+Right     gaps horizontal current minus  5



    # Reset Gap Values
    bindsym $ctrl+r         "gaps outer current set 4 ; gaps inner current set 6"

    # Escape Mode
    bindsym Return          mode "default"
    bindsym Escape          mode "default"
    bindsym $mod+g          mode "default"
}
bindsym $mod+g mode "i3-gap-resize"




