# Pulse Audio Controls
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/scripts/Audio/ActiveSink-Volume.sh +1     # Increase Active Output Device
bindsym XF86AudioLowerVolume exec --no-startup-id ~/scripts/Audio/ActiveSink-Volume.sh -1     # Decrease Active Output Device
bindsym XF86AudioMute exec --no-startup-id ~/scripts/Audio/ActiveSink-Toggle-Mute.sh          # Mute Active Output Device

# Better Shortcuts (Escapes Right After)
mode "better-shortcuts" {
    # [HOME/END] Alternatives
    bindsym --release       Left    exec xdotool key "Home"   "Escape"
    bindsym --release       Right   exec xdotool key "End"    "Escape"
    
    # Escape Mode
    bindsym Return          mode "default"
    bindsym Escape          mode "default"
    bindsym $mod+Tab        mode "default"
}
bindsym $mod+Tab mode "better-shortcuts"


