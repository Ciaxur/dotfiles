[colors]
;background = #7700689C
background = #0000689C
background-alt = #255DADE2
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[modules/xmenu]
menu-0 = item 1;command
menu-0-0 = sub-item 1.1;command
menu-0-1 = sub-item 1.2;command
menu-0-2 = sub-item 1.3;command
menu-1 = item 2;command
menu-1-0 = sub-item 2.1;command
menu-1-1 = sub-item 2.2;command

[bar/main]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 18
;offset-x = 1%
;offset-y = 1%
radius = 1.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = "Roboto:pixelsize=8:weigth=bold;0"
font-1 = Unifont:size=6;0
font-2 = FontAwesome:size=8;
font-3 = NotoSans-Regular:size=8;-1
font-4 = MaterialIcons:size=10;0
font-5 = Iosevka:size=12;1

modules-left = bspwm i3 spotify-script
modules-center = 
modules-right = brightness better-volume memory cpu-usage cpu-freq cpu-temp bat-script internet-conx date

;; Icon App Tray
;tray-position = right
;tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

[module/better-volume]
type = custom/script
exec = ~/.config/polybar/scripts/VolumeInfo
tail = true
click-left = ~/.config/polybar/scripts/ActiveSink-Toggle-Mute.sh

[module/cpu-freq]
type = custom/script
exec = ~/.config/polybar/scripts/CPU/cpu-current-freq.sh
interval = 1.0

[module/cpu-temp]
type = custom/script
exec = ~/.config/polybar/scripts/CPU/cpu-temps
tail = true

[module/cpu-usage]
type = custom/script
exec = ~/.config/polybar/scripts/CPU/usage
tail = true

[module/volume-script]
type = custom/script
exec = ~/.config/polybar/scripts/ActiveVolumeInfo.sh
interval = 0.03

[module/brightness]
type = custom/script
exec = ~/.config/polybar/scripts/getBrightness.sh
interval = 1

[module/internet-conx]
type = custom/script
exec = ~/.config/polybar/scripts/internet-module.sh
interval = 2.5
#format-underline = #449f78e1

[module/spotify-script]
type = custom/script
exec = ~/.config/polybar/scripts/getCurrentPlayingSong.sh
interval = 1


[module/bat-script]
type = custom/script
exec = ~/.config/polybar/scripts/battery-display.sh
interval = 5
click-left = notify-send "Battery Info" "`acpi`" -t 2000
#format-underline = #55ffb52a


[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.secondary}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= #00FF8733
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = flase

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

label-focused = F %index%
label-focused-background = ${module/bspwm.label-focused-background}
label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}

label-unfocused = U %index%
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

label-visible = V %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

label-urgent = %index%!
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
type = internal/xbacklight

format =  <label>
label = %percentage%%

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
